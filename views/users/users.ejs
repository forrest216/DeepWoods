<div class="columns">

  <div class="column is-half">
    <div id="left-users-column">

      <div id="map"></div>

      <div class="text-area">
        <p id="secret-instructions">Move the pin on the map to your secret location. Then fill out the fields below and save your secret to trade later.</p>
      </div>

      <form id="add-secret-form" action="/users/secrets" method="POST">

        <div class="field is-horizontal">
          <div class="field-body">
            <div class="field">
              <div class="control">
                <input name="species" class="input" type="text" placeholder="Species">
              </div>
            </div>
            <div class="field">
              <div class="control has-icons-left">
                <input name="locale" class="input" type="text" placeholder="General location(very)" value="County/locale">
